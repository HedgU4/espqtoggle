                            "properties": {
                                "id": {
                                    "enum": ["gpio0"]
                                },
                                "description": {
                                    "enum": ["test description2"]
                                },
                                "unit": {
                                    "enum": ["test unit2"]
                                },
                                "enabled": {
                                    "enum": [true]
                                },
                                "persisted": {
                                    "enum": [true]
                                },
                                "sampling_interval": {
                                    "enum": [150]
                                },
                                "transform_read": {
                                    "enum": [""]
                                },
                                "pull_up": {
                                    "enum": [true]
                                },
                                "output": {
                                    "enum": [true]
                                }
                            }
                        }
                    ]
                }
            }
        },
        {
            "name": "json-http-client",
            "params": {
                "method": "GET",
                "path": "/ports/gpio0/value",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
