{
	"name": "get-firmware",
	"instructions": [
		{
			"name": "json-http-client",
			"params": {
				"method": "GET",
				"path": "/firmware",
				"headers": {
					"Authorization": "Bearer ${TEST_JWT_ADMIN}"
				},
				"expected_status": 200,
				"expected_body_schema": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "version",
                        "latest_version",
                        "latest_date",
                        "latest_url",
                        "status"
                    ],
                    "properties": {
                        "version": {
                            "enum": ["${VERSION}"]
                        },
                        "latest_version": {
                            "type": "string",
                            "pattern": "^[0-9ab.]+$"
                        },
                        "latest_date": {
                            "type": "string",
                            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
                        },
                        "latest_url": {
                            "type": "string",
                            "pattern": "^http://firmware.qtoggle.com/espqtoggle/[a-f0-9]+/[0-9ab.]+$"
                        },
                        "status": {
                            "enum": ["idle"]
                        }
                    }
                }
			}
		}
	]
}

